{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
    ],
    "paths": {
      "mo-js": ["types/mojs.d.ts"]
    }
  },
  "files": ["./types/mojs.d.ts"],
  "include": [
    "src"
  ]
}
